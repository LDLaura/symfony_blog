{% extends 'base.html.twig' %}

{% block title %}
	Administration des utilisateurs
{% endblock %}

{% block body %}
	<section class="container mt-2 gy-4">
		<h1 class="text-center">Administration des utilisateurs</h1>
        <a href="{{ path('register') }}" class="btn btn-primary">Cr√©er un utilisateur</a>
		<div class="row mt-2 gy-4">
			{% for user in users %}
				<div class="col-md-4">
					<div class="card">
						<h4>
							{{ user.fullName }}
						</h4>
						<p>
							Email :
							{{ user.email }}
						</p>
						<p>
							Roles :
							{{ user.roles|join(', ')|replace({'ROLE_': ' '})|title }}
						</p>
						<div class="card-btn">
							<a href="{{ path('admin.users.update', {id: user.id}) }}" class="btn btn-warning">Modifier</a>
							{% include 'Backend/User/_delete.html.twig' %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
